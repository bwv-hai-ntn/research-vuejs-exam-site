<link rel="stylesheet" href="/css/user/list.css">
<section class="content">
    <div class="row">
        <div class="col-12 row mess-submit" style="display: none;">
            <div class="col-11 text-message"></div>
            <div class="col-1 close-icon" v-on:click="closeAlertMessage">
            <svg xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" aria-hidden="true" focusable="false" width="1.5em" height="1.5em" style="-ms-transform: rotate(360deg); -webkit-transform: rotate(360deg); transform: rotate(360deg);" preserveAspectRatio="xMidYMid meet" viewBox="0 0 16 16"><g fill="#626262">
                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8L4.646 5.354a.5.5 0 0 1 0-.708z"/></g>
            </svg>
            </div>
        </div>
        <div class="col-md-12 mg-pd-0">
            <input type="hidden" value="<%= JSON.stringify(queryData) %>" disabled name="queryData">
            <form method="get" ref="form" @submit="searchForm" novalidate>
                <div class="row">
                    <div class="col-md-6 mg-pd-0">
                        <!-- User name -->
                        <exam-input
                        labelname="User name"
                        name="userName"
                        v-model="admin.userName"
                        ></exam-input>
                    </div>
                    <div class="col-md-6 mg-pd-0">
                        <!-- Email -->
                        <exam-input
                        labelname="Email"
                        name="email"
                        v-model="admin.email"
                        ></exam-input>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6 mg-pd-0 pd-10">
                        <!-- Authority -->
                        <input type="hidden" name="authority" value="">
                        <input-checkbox
                        labelname="Authority"
                        name="authority"
                        v-model="admin.authority"
                        :options="<%= JSON.stringify(static.authorityScreen) %>"
                        @statuschanged="onStatusChange"
                        >
                        </input-checkbox>
                    </div>
                    <div class="col-md-6 mg-pd-0 category-select">
                        <!-- User category -->
                        <exam-select-box
                        name="category"
                        labelname="User category"
                        v-model="admin.category"
                        :options="<%= JSON.stringify(categories) %>"
                        ></exam-select-box>
                    </div>
                </div>
            </form>
        </div>
    </div>  
    <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12 mg-pd-0">
            <div class="table-responsive no-padding">
                <exam-table
                    :static="<%= JSON.stringify(static) %>"
                    :data="<%= JSON.stringify(users.rows) %>"
                    :count="<%= JSON.stringify(users.count) %>"
                    :messages="<%= JSON.stringify(messages) %>"
                    :option="<%= JSON.stringify(categoryModal) %>">
                </exam-table>
            </div>
        </div>
    </div>
</section>
