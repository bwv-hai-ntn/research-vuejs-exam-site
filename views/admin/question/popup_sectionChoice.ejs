<div class="modal fade" id="sectionChoice" tabindex="-1" role="dialog" data-backdrop="static" data-keyboard="false" aria-labelledby="sectionChoiceLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header dis-border">
        <div style="float: center;">Please choose</div>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">Ã—</span>
        </button>
      </div>
      <div class="header-custom-popup-choice"></div>
      <div class="modal-body section-sortable" style="text-align: center;">
        <div class="col-12 word-break-text row"
          v-for="(section, section_key) in sectionList"
        >
          <div class="col-3" style="text-align: center; padding: 0">
            <button class="btn btn-success mg-r-10 btn-add-section"
              v-if="section.id != sections[0].id"
              v-on:click="popup_btnSelect(section.id)"
            >
              Select
            </button>
          </div>
          <div class="col-9" style="text-align: left; padding: 0; cursor: default;">
            <exam-div
              customclass="div-title-popup-choice"
              v-if="sections[0].id == section.id"
              :title="sections[0].title || '(Untitled Section)'"
            ></exam-div>

            <a class="no-decoration" style="cursor: default;">
              <exam-div
                customclass="div-title-popup-choice"
                v-if="sections[0].id != section.id"
                :title="section.title || '(Untitled Section)'"
              ></exam-div>
            </a>

            <div style="opacity: 0.5;">
              Section {{ section_key + 1}} of {{ sectionList.length }}
            </div>
          </div>
          <hr style="width: 100%;" v-if="section_key + 1 !== sectionList.length">
        </div>
      </div>
    </div>
  </div>
</div>